<%# Этот шаблон отрисуется, когда пользователь захочет посмотреть список пользователей %>
<div class="content-wrapper buffer-both text-center">
  <div class="buffer-both">
    <h1 class="title-medium">Наши пользователи</h1>
  </div>

  <%# Этот код выводит каждого пользователя в цикле %>
  <% @users.each do |user| %>
    <div class="users-list-item">
      <div class="user-image-div user-image-div-small">
        <%= link_to image_tag(user_avatar(user), class: 'user-image'), user_path(user) %>
      </div>
    </div>
  <% end %>

  <div class="content-wrapper buffer-both text-center">
    <div class="col-lg-offset-4 col-lg-4">
      <div class="buffer-both">
        <h3>Доступные хештеги</h3>
      </div>
      <div>
        <% @hashtags.each do |hashtag| %>
          <%= link_to "##{hashtag.name}", hashtag_path(hashtag.name) %>
        <% end %>
      </div>
    </div>
  </div>
</div>